<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="4dp"
    android:minHeight="?listPreferredItemHeightLarge"
    app:cardCornerRadius="@dimen/view_standard_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_standard_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_productImage"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@drawable/default_product_image" />

        <LinearLayout
            android:id="@+id/price_details_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/view_standard_margin"
            android:layout_marginEnd="@dimen/view_standard_margin"
            android:layout_toEndOf="@+id/imageView_productImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_productTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#555555"
                tools:text="Product Title" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_priceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textColor="#555555"
                    tools:text="Product Title" />

                <TextView
                    android:id="@+id/textView_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_standard_margin"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textColor="#ed1c24"
                    tools:text="Product Title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_referencePriceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textColor="#555555"
                    tools:text="Product Title" />

                <TextView
                    android:id="@+id/textView_referencePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_standard_margin"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textColor="#555555"
                    tools:text="Product Title" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/button_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/circle_cart_bg"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_cart"
            android:padding="4dp"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:textColor="@android:color/white" />


    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>